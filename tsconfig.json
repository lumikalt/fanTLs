{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": ["astro/client"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@content/*": ["content/*"],
      "@content/config": ["content/config.ts"],
      "@consts": ["consts.ts"],
      "@novels": ["novels.yaml"],
      "@novels.yaml": ["novels.yaml"],
      "@types": ["types/"]
    }
  },
  "include": ["src"]
}
